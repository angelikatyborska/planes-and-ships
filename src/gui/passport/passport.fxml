<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" stylesheets="/gui/passport/passport.css"
          styleClass="passport">
    <ImageView GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="TOP">
        <Image url="/images/photo.png"/>
    </ImageView>
    <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.valignment="TOP" styleClass="passenger-info">
        <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label"/>
        <Label fx:id="firstName" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info"/>

        <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="info-label"/>
        <Label fx:id="lastName" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="info"/>

        <Label text="Hometown:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="info-label"/>
        <Label fx:id="hometown" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="info"/>

        <Label text="Age:" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="info-label"/>
        <Label fx:id="age" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="info"/>

        <Label text="PESEL:" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="info-label"/>
        <Label fx:id="PESEL" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="info"/>
    </GridPane>
</GridPane>